<!-- Button trigger modal -->
<div class="d-flex justify-content-end">
  <button
    type="button"
    class="btn btn-success"
    data-bs-toggle="modal"
    data-bs-target="#exampleModal"
  >
    Create New Project
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background-color: #F2F2F2; color: #333333;">
      <div class="modal-header" style="background-color: #C0C0C0; color: #333333;">
        <h5 class="modal-title" id="exampleModalLabel">Create a new project</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/project/create" method="POST">
        <div class="mb-3" style="margin: 5px 10px 5px 10px;">
          <label for="namelabel" class="form-label">Name</label>
          <input type="text" name="name" placeholder="Name of your project" required class="form-control" id="namelabel" />
        </div>
        <div class="mb-3" style="margin: 5px 10px 5px 10px;">
          <label for="inputPassword3" class="form-label">Description</label>
          <textarea name="description" placeholder="Write something about your project..." required class="form-control" id="inputPassword3" style="height: 100px"></textarea>
        </div>
        <div class="mb-3" style="margin: 5px 10px 5px 10px;">
          <label for="authorlabel" class="form-label">Author</label>
          <input type="text" name="author" placeholder="Author" required class="form-control" id="authorlabel" />
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" style="background-color: #E95420; border-color: #E95420;">Create project</button>
        </div>
      </form>
    </div>
  </div>
</div>

