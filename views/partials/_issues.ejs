<!-- This partial contains all the issues and search/filter issues buttons:  -->

<% if(project.issues.length >= 1) { %>
  <div class="w-50 my-5 d-flex justify-content-around mx-auto">
    <div>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary btn-sm"
        style="padding: 0.25rem 0.5rem; font-size: 1rem; background-color:orange;"       data-bs-toggle="modal"
        data-bs-target="#allIssue"
      >
        Show All Issues
      </button>
  
      <!-- Modal -->
      <div
        class="modal fade"
        id="allIssue"
        tabindex="-1"
        aria-labelledby="allIssueLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="allIssueLabel">All Issues</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <% for(let issue of project.issues){ %>
              <div id="all-issues" class="card w-100 mb-3">
                <div class="card-body">
                  <h4 class="card-title">Title: <%= issue.title %></h4>
                  <h5 class="card-subtitle">Author: <%= issue.author %></h5>
                  <h5 class="card-subtitle">Description: <%= issue.description %></h5>
                  <p >Labels: <%= issue.labels %></p>
                </div>
              </div>
              <% } %>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
                style="background-color: red;"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary btn-sm"
        style="padding: 0.25rem 0.5rem; font-size: 1rem;background-color:orange;"
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop"
      >
        Filter Issues
      </button>
  
      <!-- Modal -->
      <div
        class="modal fade"
        id="staticBackdrop"
        tabindex="-1"
        aria-labelledby="staticBackdropLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Filter Issues</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
  
            <form
              class="border border-light border-3 p-3"
              action="/"
              method="get"
              id="filter-issue-form"
            >
              <div class="row mb-3">
                <label for="labels" class="col-sm-4 col-form-label">Search by Label</label>
                <div class="col-sm-8">
                  <% for( let label of project.labels) { %>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      name="labels"
                      type="checkbox"
                      value="<%= label %>"
                      id="<%=label%>"
                    />
                    <label class="form-check-label" for="<%=label%>">
                      <%=label%>
                    </label>
                  </div>
                  <% } %>
                </div>
              </div>
              <div class="row mb-3">
                <label for="authorlabel" class="col-sm-4 col-form-label">Author</label>
                <div class="col-sm-8">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      name="author"
                      type="radio"
                      checked="checked"
                      value=""
                      id="null"
                    />
                    <label class="form-check-label" for="null">None</label>
                  </div>
                  <% for( let issue of project.issues ) { %>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      name="author"
                      type="radio"
                      value="<%= issue.author %>"
                      id="<%= issue.author %>"
                    />
                    <label class="form-check-label" for="<%= issue.author %>">
                      <%= issue.author %>
                    </label>
                  </div>
                  <% } %>
                </div>
              </div>
  
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                  style="background-color: red;"
                >
                  Close
                </button>
                <button
                  type="submit"
                  data-bs-dismiss="modal"
                  class="btn btn-primary"
                >
                  See Issues
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary btn-sm"
        style="padding: 0.25rem 0.5rem; font-size: 1rem; background-color:orange;"
        data-bs-toggle="modal"
        data-bs-target="#searchmodal"
      >
        Search Issues
      </button>
  
      <!-- Modal -->
      <div
        class="modal fade"
        id="searchmodal"
        tabindex="-1"
        aria-labelledby="searchmodalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="searchmodalLabel">Search Issues</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <form
              class="border border-light border-3 p-3"
              action="/"
              method="get"
              id="search-issue-form"
            >
              <div class="row mb-3">
                <label for="titlelabel" class="col-sm-4 col-form-label">Title</label>
                <div class="col-sm-8">
                  <input
                    type="text"
                    name="tie"
                    placeholder="Search by title.."
                    class="form-control"
                    id="titlelabel"
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label for="desclabel" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                  <input
                    type="text
                    name="des"
                    placeholder="Search by description..."
                    class="form-control"
                    id="authorlabel"
                  />
                </div>
              </div>
  
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                  style="background-color: red;"
                >
                  Close
                </button>
                <button
                  type="submit"
                  data-bs-dismiss="modal"
                  class="btn btn-primary"
                >
                  See Issues
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
